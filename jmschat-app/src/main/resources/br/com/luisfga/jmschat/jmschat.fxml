<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="520.0" prefWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.luisfga.jmschat.PrimaryController">
   <children>
      <HBox alignment="CENTER" prefHeight="0.0" prefWidth="260.0" spacing="10.0">
         <children>
            <Label text="User ID" />
            <TextField fx:id="userId" prefHeight="25.0" prefWidth="68.0" />
            <Label text="Dest ID" />
            <TextField fx:id="destId" prefHeight="25.0" prefWidth="70.0" />
         </children>
      </HBox>
      <Button fx:id="connectBtn" onAction="#connect" text="Connect" />
      <HBox alignment="TOP_CENTER" prefHeight="0.0" prefWidth="260.0" spacing="20.0">
         <children>
            <TextField fx:id="msgTextField" prefHeight="25.0" prefWidth="190.0" promptText="Digite a mensagem aqui" />
            <Button fx:id="sendBtn" onAction="#sendMessage" text="Send" />
         </children>
      </HBox>
      <TextArea fx:id="stdout" editable="false" prefHeight="200.0" prefWidth="200.0" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
